@model CSProjeDemo1.Core.Entities.Kitap

<h2>Kitap Düzenle</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="KitapDurumu" /> <!-- Kitap Durumu eksik olabilir -->

    <div class="form-group">
        <label asp-for="ISBN">ISBN:</label>
        <input asp-for="ISBN" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Baslik">Başlık:</label>
        <input asp-for="Baslik" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Yazar">Yazar:</label>
        <input asp-for="Yazar" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="YayinYili">Yayın Yılı:</label>
        <input asp-for="YayinYili" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success mt-3">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">İptal</a>
</form>
