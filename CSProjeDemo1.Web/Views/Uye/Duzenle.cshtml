@model CSProjeDemo1.Core.Entities.Uye

<h2>Üye Bilgilerini Düzenle</h2>

<form asp-action="Duzenle" asp-controller="Uye" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label>Ad:</label>
        <input type="text" asp-for="Ad" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Soyad:</label>
        <input type="text" asp-for="Soyad" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Üye Numarası:</label>
        <input type="number" asp-for="UyeNumarasi" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-success">Güncelle</button>
</form>
