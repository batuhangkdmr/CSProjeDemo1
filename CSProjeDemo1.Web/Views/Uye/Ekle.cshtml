@model CSProjeDemo1.Core.Entities.Uye

<h2>Yeni Üye Ekle</h2>
<form asp-action="Ekle" asp-controller="Uye" method="post">
    <div class="form-group">
        <label>Ad:</label>
        <input type="text" class="form-control" asp-for="Ad" required />
    </div>
    <div class="form-group">
        <label>Soyad:</label>
        <input type="text" class="form-control" asp-for="Soyad" required />
    </div>
    <div class="form-group">
        <label>Üye Numarası:</label>
        <input type="number" class="form-control" asp-for="UyeNumarasi" required />
    </div>
    <button type="submit" class="btn btn-success mt-2">Üye Kaydet</button>
</form>
